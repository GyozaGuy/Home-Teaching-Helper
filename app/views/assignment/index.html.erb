<h1>Assignments</h1>
<% @assignments.each do |assignment| %>
<h2>Assignment <%= assignment.id %></h2>
<h3>Companions</h3>
<p>
  <% assignment.companionship.members.each do |companion| %>
  <%= companion.first_name %> <%= companion.last_name %><br />
  <% end %>
</p>
<h3>Members Being Taught</h3>
<p>
  <% assignment.members.each do |member| %>
  <%= member.first_name %> <%= member.last_name %><br />
  <% end %>
</p>
<% end %>
